<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:JungholmInstrumentsDesktop.ViewModels"
        xmlns:models="using:JungholmInstrumentsDesktop.Models"
        xmlns:si="clr-namespace:SatialInterfaces.Controls.Calendar;assembly=CalendarControl"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="JungholmInstrumentsDesktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/jungholm-logo.ico"
        Title="Jungholm Instruments - Laboratory Gateway"
        Width="1200"
        Height="800"
        WindowStartupLocation="CenterScreen">
    

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" Margin="20">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto,Auto,Auto" Margin="0,0,0,20">
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Jungholm Instruments" 
                           FontSize="24" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TimezoneDisplay}" 
                           FontSize="10" 
                           Foreground="Gray"
                           Margin="0,2,0,0"/>
            </StackPanel>
            
            <!-- View Toggle Button -->
            <Button Grid.Column="1"
                    Content="{Binding ViewToggleText}"
                    Command="{Binding ToggleViewCommand}"
                    Margin="10,0"
                    Padding="15,5"/>
            
            <!-- Today Button -->
            <Button Grid.Column="2"
                    Content="Today"
                    Command="{Binding TodayCommand}"
                    Margin="10,0"
                    Padding="15,5"/>
            
            <!-- Previous Button -->
            <Button Grid.Column="3"
                    Content="◀"
                    Command="{Binding PreviousPeriodCommand}"
                    Margin="10,0"
                    Padding="15,5"/>
            
            <!-- Next Button -->
            <Button Grid.Column="4"
                    Content="▶"
                    Command="{Binding NextPeriodCommand}"
                    Margin="10,0"
                    Padding="15,5"/>
        </Grid>

        <!-- Calendar Content -->
        <Grid Grid.Row="1">
            <!-- Week View CalendarControl -->
            <ScrollViewer IsVisible="{Binding IsWeekView}"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto"
                         MaxWidth="1200"
                         MaxHeight="600"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top">
                <Border BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10">
                    <si:CalendarControl x:Name="WeekCalendar"
                                       Width="1100"
                                       Height="550"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top">
                        <si:CalendarControl.ItemTemplate>
                            <DataTemplate x:DataType="models:Booking">
                                <si:AppointmentControl Begin="{Binding Begin}" 
                                                      End="{Binding End}" 
                                                      Text="{Binding Text}" />
                            </DataTemplate>
                        </si:CalendarControl.ItemTemplate>
                    </si:CalendarControl>
                </Border>
            </ScrollViewer>

            <!-- Month View -->
            <Border IsVisible="{Binding !IsWeekView}"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="10"
                    Width="500"
                    Height="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
                <Calendar SelectedDate="{Binding SelectedDate}"
                         DisplayDate="{Binding DisplayedMonth}"
                         SelectionMode="SingleDate"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"/>
            </Border>
        </Grid>
    </Grid>
</Window>
